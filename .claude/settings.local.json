{
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "true",
    "DISABLE_TELEMETRY": "true",
    "BASH_DEFAULT_TIMEOUT_MS": "120000",
    "MCP_TIMEOUT": "30000"
  },
  "permissions": {
    "allow": [
      "Read:",
      "Write:",
      "Edit:",
      "MultiEdit:",
      "TodoWrite:",
      "Bash:",
      "Glob:",
      "Grep:",
      "WebFetch:",
      "WebSearch:",
      "BashOutput:",
      "KillShell:",
      "SlashCommand:",
      "ExitPlanMode:",
      "NotebookEdit:",
      "Bash(git config:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git merge:*)",
      "Bash(git pull:*)",
      "Bash(git fetch:*)",
      "Bash(curl:*)",
      "Bash(git reset:*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(git reset --hard HEAD~)",
      "Bash(git push --force origin main)",
      "Edit(**/.env)",
      "Write(**/.env)",
      "Edit(**/secrets.*)",
      "Write(**/secrets.*)",
      "Edit(**/credentials.*)",
      "Write(**/credentials.*)",
      "Edit(**/password.*)",
      "Write(**/password.*)",
      "Edit(**/*.key)",
      "Write(**/*.key)"
    ],
    "ask": [],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'ðŸ“‹ Todo list updated - maintaining progress tracking'"
          }
        ]
      },
      {
        "matcher": "Edit(**/*.ts)",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'âœ… TypeScript file updated - remember to run tests'"
          }
        ]
      },
      {
        "matcher": "Edit(**/*.tsx)",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'âœ… React component updated - Playwright tests should verify UI'"
          }
        ]
      },
      {
        "matcher": "Bash(git commit:*)",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'âœ… Git commit complete - Author: Libor Ballaty <libor@arionetworks.com>'"
          }
        ]
      },
      {
        "matcher": "Bash(npm test:*)",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'ðŸ§ª Tests executed - review results for failures'"
          }
        ]
      }
    ]
  }
}